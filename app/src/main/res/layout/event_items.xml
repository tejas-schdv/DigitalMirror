<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="#6e6bff"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="false"
        android:layout_margin="10dp"


        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="horizontal">
            </LinearLayout>

            <ImageView
                android:id="@+id/ivDot"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/red" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEventDateCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="-20dp"
                    android:textSize="15sp"
                    android:textColor="#f3f2ff"
                    android:text="Mon, Jan 01, 2020"
                    />

                <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tvEventDateCard"
                    android:textSize="25sp"
                    android:textColor="#f3f2ff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Event Name" />


                <ImageButton
                    android:id="@+id/btnDeleteEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#6e6bff"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/clear" />
            </RelativeLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>