<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCalendarEvent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/btnExit"
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:background="#6e6bff"
            android:layout_weight="1"
            app:srcCompat="@drawable/clear" />


        <TextView
            android:id="@+id/tvNewEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textSize="40sp"
            android:background="#6e6bff"
            android:textColor="#f3f2ff"
            android:layout_weight="1"
            android:gravity="center"
            android:text="New Event" />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:background="#6e6bff"
            android:layout_weight="1"
            app:srcCompat="@drawable/check2" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:text="Event Date" />

    <TextView
        android:id="@+id/tvEventDateSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEventDate"
        android:textSize="15sp"
        android:text="Monday, January 1, 2020" />

    <TextView
        android:id="@+id/tvColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:gravity="right"
        android:paddingRight="20dp"
        android:text="Color"/>

    <Spinner
        android:id="@+id/spinnerColor"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvColor"
        android:layout_alignParentRight="true"
        android:paddingRight="20dp"
        />

    <TextView
        android:id="@+id/tvEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvEventDateSet"
        android:text="Event Title"/>

    <EditText
        android:id="@+id/etEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:layout_below="@+id/tvEventTitle"
        />

    <TextView
        android:id="@+id/tvEventDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEventTitle"
        android:layout_marginTop="10dp"
        android:text="Event Description" />

    <EditText
        android:id="@+id/etEventDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEventDescription"
        android:hint="Description"/>


</RelativeLayout>